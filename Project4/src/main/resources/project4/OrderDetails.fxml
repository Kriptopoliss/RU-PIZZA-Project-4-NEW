<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="mainContainer" alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project4.OrderDetailsController">
    <Label text="Store Orders">
      <font>
         <Font name="System Bold" size="30.0" />
      </font></Label>

    <HBox alignment="CENTER" spacing="10">
        <Label text="Order Number" />
      <ComboBox fx:id="orderNumbers" prefWidth="150.0" />
      <Label text="Order Total $" />
      <TextField fx:id="orderTotal" />
    </HBox>

    <ListView fx:id="orderDetailsListView" prefHeight="200" prefWidth="600" />

    <HBox alignment="CENTER" spacing="20">
        <Button id="OrderDetailsRemove" fx:id="cancelOrderButton" text="Cancel Order" />
        <Button id="OrderDetailsPlace" fx:id="exportButton" text="Export Store Orders" />
    </HBox>
</VBox>
